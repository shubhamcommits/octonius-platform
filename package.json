{
    "name": "octonius-platform",
    "version": "2.0.0",
    "description": "Octonius Platform - A modern web application with Terraform infrastructure",
    "main": "dist/server.js",
    "repository": "https://github.com/Octonius/octonius-platform",
    "author": "Shubham Singh",
    "license": "MIT",
    "scripts": {
        "build": "NODE_OPTIONS=--max-old-space-size=4096 tsc --diagnostics --extendedDiagnostics",
        "serve": "ts-node-dev server.ts",
        "start:dev": "NODE_ENV=dev APP_NAME=octonius-platform-service AWS_DEFAULT_REGION=eu-central-1 node dist/server.js",
        "start:prod": "NODE_ENV=prod APP_NAME=octonius-platform-service AWS_DEFAULT_REGION=eu-central-1 node dist/server.js",
        "dev": "NODE_ENV=dev APP_NAME=octonius-platform-service AWS_DEFAULT_REGION=eu-central-1  NODE_OPTIONS=--max-old-space-size=6144 ts-node-dev server.ts",
        "prod": "NODE_ENV=prod APP_NAME=octonius-platform-service AWS_DEFAULT_REGION=eu-central-1  NODE_OPTIONS=--max-old-space-size=6144 ts-node-dev server.ts",
        "local": "NODE_ENV=local APP_NAME=octonius-platform-service AWS_DEFAULT_REGION=eu-central-1 NODE_OPTIONS=--max-old-space-size=6144 ts-node-dev server.ts",
        "staging": "NODE_ENV=staging node dist/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.6.0",
        "@types/node-fetch": "^2.6.9",
        "@types/pg": "^8.10.9",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.4",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@types/aws-sdk": "^0.0.42",
        "aws-sdk": "^2.1692.0",
        "axios": "^1.6.2",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "node-fetch": "^3.3.2",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "redis": "^4.6.11",
        "sequelize": "^6.35.2",
        "ts-node": "^10.9.2",
        "winston": "^3.11.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "keywords": [
        "nodejs",
        "typescript",
        "express",
        "postgresql",
        "redis",
        "terraform",
        "aws"
    ]
}

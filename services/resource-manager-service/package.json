{
  "name": "resource-manager-service",
  "version": "1.0.0",
  "description": "Resource scheduler service for auto-shutdown/startup of non-production resources",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:lambda": "tsc && npm run bundle",
    "bundle": "esbuild dist/index.js --bundle --platform=node --target=node18 --external:aws-sdk --external:@aws-sdk/* --external:pg-hstore --external:pg --external:ssh2 --external:cpu-features --format=cjs --outfile=dist/index.js --allow-overwrite",
    "bundle:all": "npm run build && npm run bundle",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "serverless-http": "^3.2.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "aws-sdk": "^2.1490.0",
    "aws-xray-sdk": "^3.5.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.8.10",
    "@types/aws-lambda": "^8.10.126",
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "prettier": "^3.0.3",
    "esbuild": "^0.25.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
